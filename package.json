    "react-dom": "^18.2.0",
    "storybook": "^8.6.12",
    "tailwindcss": "^3.4.17",
    "tw-animate-css": "^1.2.8",
    "typescript": "^5.2.2",
    "vite": "^5.1.0",
    "vite-plugin-dts": "^3.7.3",
    "vitest": "^3.1.2"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
