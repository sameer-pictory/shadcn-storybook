{
  "name": "shadcn-storybook",
  "version": "0.1.0",
  "description": "Shadcn UI Components with Storybook",
  "private": false,
  "type": "module",
  "main": "dist/shadcn-storybook.umd.js",
  "module": "dist/shadcn-storybook.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src/index.css",
    "tailwind.config.js"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.build.json && vite build",
